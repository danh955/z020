@using z020.Website.Services.TicTacToe;
<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="BoardName" Label="Board Name" />
        <MudTextField @bind-Value="PlayerName" Label="Players Name" />
        <MudRadioGroup @bind-SelectedOption="Piece">
            <MudRadio Option="Pieces.X">X</MudRadio>
            <MudRadio Option="Pieces.O">O</MudRadio>
        </MudRadioGroup>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

